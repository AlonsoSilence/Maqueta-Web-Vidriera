@import "normalize.styl"

figure
	margin 0

header
	background rgba(255,255,255,0.6)
	text-align center
	.header-logo
		height 100%
		width 100%
		display block
		.header-logo-img
			width 40%
			display inline-block
			margin 0
			text-align center
			img
				margin 0
				width 100%
	.header-content-nav
		display block
		width 100%
		.header-nav
			display block
			.header-nav-ul
				margin 0
				.header-ul-li
					display inline-block
					padding 1em
					.header-li-a
						padding 1em
						color black
						text-decoration none
						&:hover
							border-radius 10%
							background #43D3F0
					.a-activo
						border-radius 10%
						background #43D3F0
				.header-li-lenguages
					display inline-block
					.lenguages
						color rgba(0,0,0,0.3)
						text-decoration none
						font-size 0.8em
						&:after
							content " |"
	.header-banner
		position relative
		width 100%
		.header-banner-img
			width 100%
			img
				width 100%	
			.header-img-figcaption
				position absolute
				right 20%
				top 64%
				color white
				background rgba(0,0,0,0.8)
				text-align left
				.header-figcaption-title
					margin 0
					font-size 2.6em
					font-weight normal
				.header-figcaption-content
					margin 0
					font-size 2em
							
footer
	position relative
	width 100%	
	text-align center
	display block
	top 0
	.footer-img
		width 100%
		img
			width 20%
	.footer-nav
		width 100%
		.footer-nav-ul
			margin 0
			.footer-li
				display inline-block
				.footer-a 
					color black
					text-decoration none
					margin 0 0.4em
					&:after
						content " |"
	.footer-web
		color red
section
	display block
	margin 3em 10% 10em 10%
	.section-description
		width 40%
		.section-description-title
			margin 0
			text-align center
		.section-description-p
			margin 0
			font-size 0.8em
	.section-last-new
		width 55%
		.last-new-img
			margin 0
			width 50%
		.last-new-info
			width 45%
			.last-new-info-header
				position relative
				width 100%
				.last-new-date
					font-weight bold
					font-size 1em
				.last-new-more
					top 10%
					position absolute
					right 0
					text-decoration none
					color white
					padding 0.6em
					background #222	
					&:hover
						color #222
						border 1px solid black
						background #EEE
				.last-new-more , .last-new-date
					display inline-block
					vertical-align top
			.last-new-decoration
				margin 0
				display block
			.last-new-title
				margin 1em 0 0 0
				font-size 1em
			.last-new-description
				margin 0
				font-size 0.8em
		.last-new-info , .last-new-img
			display inline-block
			vertical-align top
	.section-description , .section-last-new
		display inline-block
		vertical-align top
	.section-news
		position relative
		text-align center
		display block
		margin 1em 0
		width 100%
		.new-item-left
			float left
		.new-item-right
			float right
		.section-new-item
			margin 1em 0
			width 80%
			.new-img
				height 100% 
				margin 0
				width 44%
				img 
					height 100%
					width 100%
			.new-info
				position relative
				width 55%
				.new-info-header
					position relative
					width 100%
					.new-date
						font-size 1em
						font-weight bold
						text-align left
					.new-more
						top 10%
						position absolute
						right 0
						text-decoration none
						color white
						padding 0.6em
						background #222
						&:hover
							color #222
							border 1px solid black
							background #EEE	
					.new-more , .new-date
						display inline-block
						vertical-align top
				.new-decoration
					text-align left
					margin 0
					display block
				.new-title
					margin 1em 0 0 0
					font-size 1em
				.new-description
					text-align left
					margin 0
					font-size 0.8em
					 
			.new-info,.new-img
				display inline-block
				vertical-align top
	.noticia-date
		display block
		margin 0
	.noticia-decoration
		display block
		margin 0
	.noticia-info
		width 80%
		.noticia-info-title
			margin 0
		.noticia-info-content
			margin 1em 4.5em 1em 0
	.noticia-more
		text-align right
		width 15%
		.noticia-more-link
			font-size 1em
			font-weight bold
			a
				color #222
				text-decoration none
		.noticia-more-author
			font-weight bold
			font-size 1em
			a
				color red
				text-decoration none
		.noticia-more-info
			display inline
			a
				background red
				font-size 2em
				color white
				text-decoration none
				padding 0.2em 0.4em
	.noticia-info, .noticia-more
		display inline-block
		vertical-align top
	.historico-date
		width 10%
		text-align center
		.date-active
			background red
			color white
		.historico-date-title
			color #222
			margin 0
		.historico-decoration
			color #222
			text-align right
			margin 0
		.historico-date-author
			color red
			margin 0 0 1em 0
		.historico-date-list
			margin 0
			padding 0
			.historico-date-list-item
				display block
				//background red
				.date-item
					color black
					display block
					text-decoration none
					//background blue
					&:hover
						background red
						color white
				
	.historico-notice
		width 88%
		.historico-notice-item
			margin 1em 3.6em
			.historico-notice-item-title
				font-size 1.2em
				color black
				margin 0
				.notice-item-date
					margin 0 1em 0 0
			.historico-notice-item-subtitle
				font-size 1em
				left 15%
				width 80%
				position relative		
			.historico-notice-content
				font-size 1em
				color #222
				left 15%
				width 80%
				position relative
	.historico-notice , .historico-date
		display inline-block
		vertical-align top
	.contacto
		text-align center
		.contacto-item
			display inline-block
			margin 1em
			.contacto-item-title
				text-align left
				margin 0 0 1em 0
			.contacto-info
				text-align left
				display block
				margin 0
	.especiales
		text-align center
		position relative
		.especiales-item
			margin 1em
			position relative
			display inline-block
			.especiales-item-img
				margin 0
				img
					height 100%
					width 100%
			.especiales-more
				position absolute
				bottom 3px
				right 0
				margin 0
				padding 0.3em .5em 
				background rgba(0,0,0,0.7)
				text-decoration none
				color white
				&:hover
					color black
					background rgba(255,255,255,0.7)
				
	.product
		position relative
		.products-list
			position relative
			left 0
			width 70%	
			.product-item
				display inline-block
				margin 1em
				.product-img
					display block
					margin 0
					width 100%
					img
						display block
						margin 0
						width 100%
					.product-content
						margin 0
						font-weight bold
						p
							margin 0
		.product-description
			position absolute
			right 0
			text-align right
			.product-description-title
				margin 0 0 2em 0
			.product-desc-title
				margin 1em 0 0 0
			.product-desc
				margin 0
				padding 0
			.product-title-more
				color red
				font-size 1em
				font-weight bold
				padding 1em 0 0 0
			.product-more-info
				display inline
				a
					background red
					font-size 1.5em
					color white
					text-decoration none
					padding 0.7em 1em
		.product-description , .products-list
			display inline-block
			vertical-align top